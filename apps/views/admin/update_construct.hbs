<div class="row grid-margin">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <form action="/admin/construct/{{construct.id}}/update" method="POST">
                    <h4 class="card-title mb-5">Cập nhật công trình - Đức Thiện Construction <button onclick="update({{post.id}})"
                            id="post-submit" class="float-right text-white btn btn-success btn-rounded btn-fw">Lưu thay
                            đổi</button></h4>
                    <label for="title">Tên công trình</label>
                    <input value="{{construct.name}}" type="text" id="title" name="name" class="form-control mb-3"
                        placeholder="Nhập tên công trình" required>
                    <label for="address">Địa chỉ công trình</label>
                    <input value="{{construct.address}}" class="form-control" id="address" name="address" class="mb-5">

                    </input>

                    <label for="client">Tên khách hàng</label>
                    <input value="{{construct.client}}" class="form-control" id="client" name="client">
                    </input>

                    <label for="value">Giá trị dự án</label>
                    <input value="{{construct.value}}" id="value" class="form-control" name="value">
                    </input>

                    <label for="year">Năm thi công</label>
                    <input value="{{construct.year}}" class="form-control" id="year" name="year">
                    </input>
                </form>
            </div>
        </div>
    </div>
</div>