<div class="row grid-margin">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <form action="/admin/users/{{user.id}}/update" method="POST">
                    <h4 class="card-title mb-5">Cập nhật công trình - Đức Thiện Construction <button id="post-submit"
                            class="float-right text-white btn btn-success btn-rounded btn-fw">Lưu thay
                            đổi</button></h4>
                    <label for="title">Tên đăng nhập</label>
                    <input value="{{user.username}}" type="text" id="title" name="username" class="form-control mb-3"
                        placeholder="username" required>
                    <label for="address">Tên người dùng</label>
                    <input value="{{user.name}}" class="form-control" id="address" name="name" class="mb-5">
                    </input>

                    <label for="client">Mật khẩu mới</label>
                    <input class="form-control" id="client" name="password">
                    </input>
                </form>
            </div>
        </div>
    </div>
</div>